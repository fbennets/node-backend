{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "exclude": [
    "./src/auth.old/**",
    "./src/error-handling.old/**",
    "./src/tests/**",
    "./src/middlewares/auth.old.ts",
    "./src/graphql/"
  ]
}
